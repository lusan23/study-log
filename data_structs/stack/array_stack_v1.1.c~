   return 0;
}
*/
void print_all(stack_i * entry) {

  //0(n) done
  printf("--------\n");
  for (int i = 3; i >=  0; i--) {

    printf("|  %d  |\n",entry->init[i] );
    printf("--------\n");
    
  }
  printf("end of stack\n\n");
}

int main ()
{
  stack_i s;
  createStack(&s);
  print_all(&s);
  return 0;

}
